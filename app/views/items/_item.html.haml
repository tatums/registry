%tr
  %td= link_to image_tag(item.gift.image.thumb.url, class: :fancy), item.gift
  %td= item.gift.title
  %td= item.quantity
  %td= number_to_currency(item.sub_total)
  %td= button_to '&times;'.html_safe, item,
                  class: 'tiny button secondary',
                  method: :delete,
                  data: { confirm: 'Are you sure?' }